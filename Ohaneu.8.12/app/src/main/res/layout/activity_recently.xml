<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/logToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:title="최근 게시글">
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#bbbbbb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#지역별"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/seoul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울"
                    android:background="@drawable/button2"
                    android:minWidth="60dp"
                    android:minHeight="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor_2"/>

                <Button
                    android:id="@+id/gyeonggido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기도"
                    android:background="@drawable/button2"
                    android:minWidth="70dp"
                    android:minHeight="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor_2"/>

                <Button
                    android:id="@+id/gangwondo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강원도"
                    android:background="@drawable/button2"
                    android:minWidth="70dp"
                    android:minHeight="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor_2"/>

                <Button
                    android:id="@+id/chungcheongdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충청도"
                    android:background="@drawable/button2"
                    android:minWidth="70dp"
                    android:minHeight="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor_2"/>

                <Button
                    android:id="@+id/jeollado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전라도"
                    android:background="@drawable/button2"
                    android:minWidth="70dp"
                    android:minHeight="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor_2"/>

                <Button
                    android:id="@+id/gyeongsangdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경상도"
                    android:background="@drawable/button2"
                    android:minWidth="70dp"
                    android:minHeight="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/mainColor_2"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#시간대별"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새벽"
                android:background="@drawable/button3"
                android:minWidth="60dp"
                android:minHeight="40dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@color/mainColor_1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전"
                android:background="@drawable/button3"
                android:minWidth="60dp"
                android:minHeight="40dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@color/mainColor_1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후"
                android:background="@drawable/button3"
                android:minWidth="60dp"
                android:minHeight="40dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@color/mainColor_1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:background="@drawable/button3"
                android:minWidth="60dp"
                android:minHeight="40dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@color/mainColor_1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>