<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/logToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:title="설정">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#bbbbbb"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#bbbbbb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="사용자 설정"
            android:textColor="#000000"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/userchange_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity=""
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="개인정보 수정"
            android:background="@drawable/setting_selector"/>

        <Switch
            android:id="@+id/push_swt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity=""
            android:text="푸쉬알림"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:background="@drawable/setting_selector"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#bbbbbb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고객 센터"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/question_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity=""
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="문의하기"
            android:background="@drawable/setting_selector"/>

        <TextView
            android:id="@+id/notice_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity=""
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="공지사항"
            android:background="@drawable/setting_selector"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#bbbbbb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/version_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity=""
            android:text="현재 버전"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:background="@drawable/setting_selector"/>

        <TextView
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity=""
            android:text="개인정보 처리방침"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:background="@drawable/setting_selector"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#bbbbbb"/>

        <TextView
            android:id="@+id/logout_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:gravity=""
            android:text="로그아웃"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/setting_selector"/>

        <TextView
            android:id="@+id/leave_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity=""
            android:text="탈퇴하기"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/setting_selector"/>
    </LinearLayout>
</LinearLayout>